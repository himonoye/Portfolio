{
  "$schema": "https://github.com/Azure/data-api-builder/releases/download/v0.9.7/dab.draft.schema.json",
  "data-source": {
    "database-type": "cosmosdb_nosql",
    "connection-string": "AccountEndpoint=https://ming-portfolio-projects.documents.azure.com:443/;AccountKey=06VqCLB7cJWlzdMeSRDPUU5DKuTZeVw12Qm8WctkTP2z3MmhIjMZaXnR5rR4v1OQBWTjFtHj78UeACDbBjUgxQ==;",
    "options": {
      "database": "portfolio-projects",
      "schema": "staticwebapp.database.schema.gql"
    }
  }, 
  "runtime": {
    "rest": {
      "enabled": true,
      "path": "/rest",
      "request-body-strict": true
    },
    "graphql": {
      "enabled": true,
      "path": "/graphql",
      "allow-introspection": true
    },
    "host": {
      "cors": {
        "origins": ["http://localhost:8080"],
        "allow-credentials": false
      },
      "authentication": {
        "provider": "StaticWebApps"
      },
      "mode": "development"
    }
  },
  "entities": {
    "Project": {
      "source": "projects",
      "rest": {
        "path": "projects"
      },
      "permissions": [
        {
          "actions": ["*"],
          "role": "anonymous"
        }
      ]
    }
  }
}